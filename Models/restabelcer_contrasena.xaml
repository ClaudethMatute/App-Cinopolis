<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_Cinopolis.Models.restabelcer_contrasena"
             Title="Restablecer Contraseña">
    <ContentPage.Content>
        <Grid BackgroundColor="#2E003E" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
            <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" WidthRequest="300">

                <Image Source="Images/logo.jpeg" WidthRequest="200" HeightRequest="100" Margin="0,0,0,20"/>

         

                <Frame BackgroundColor="#9F75F9" CornerRadius="0" HasShadow="False" Padding="0">
                    <Entry 
          Placeholder="Ingrese codigo de Verificacion"
          TextColor="White"
          PlaceholderColor="White"
          Margin="0,5" />
                </Frame>

                <Label Text="Se envió a su correo electrónico, con un código para restablecer la contraseña, por favor introduzca el Código!" TextColor="#FFf" HorizontalTextAlignment="Start" Margin="0,10,0,50"/>

                <Button Text="ENVIAR" WidthRequest="300" HeightRequest="50" BackgroundColor="#000" TextColor="White" FontSize="16"/>
            </VerticalStackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>