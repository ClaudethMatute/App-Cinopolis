<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_Cinopolis.Models.Verificar_contrasena"
             Title="Verificar_contrasena">
    <ContentPage.Content>
        <Grid BackgroundColor="#2E003E" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
            <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" WidthRequest="300">

                <Image Source="Images/logo.jpeg" WidthRequest="200" HeightRequest="100" Margin="0,0,0,20"/>
                <Label Text="Hemos enviado un codigo a tu correco eletronico por favor ingresa el codigo" TextColor="#FF4081" HorizontalTextAlignment="End" Margin="0,10,10,30"/>

                <VerticalStackLayout Margin="0,0,0,10">
                    <StackLayout Orientation="Horizontal" VerticalOptions="Center">
                        <Image Source="Images/seguro.png" WidthRequest="30" HeightRequest="30" Margin="0,0,10,0"/>
                        <Label Text="Codigo de Verificacion" TextColor="White" Margin="50,0,0,5"/>
                    </StackLayout>
                    <Entry WidthRequest="300" HeightRequest="40" BackgroundColor="#9F75F9" TextColor="White"/>
                </VerticalStackLayout>




                <Button Text="Verificar Codigo" WidthRequest="300" HeightRequest="50" BackgroundColor="#000" TextColor="White" FontSize="16" Margin="0,20,0,5"/>
                
                
                <Label Text="No has resivido el codigo de Verificacion" TextColor="#FF4081" HorizontalTextAlignment="End" Margin="10,20,10,0"/>
                <Button Text="Reenviar Codigo" WidthRequest="300" HeightRequest="50" BackgroundColor="#000" TextColor="White" FontSize="16" Margin="0,20,0,5"/>
            </VerticalStackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>